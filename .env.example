# Server Configuration
NODE_ENV=development
PORT=3000
HOST=0.0.0.0
LOG_LEVEL=info

# GitHub API (Legacy - for backwards compatibility)
# Get your token from: https://github.com/settings/tokens
# Required scopes: read:org, read:user
GITHUB_TOKEN=ghp_your_github_personal_access_token_here

# GitHub OAuth App
# Create your OAuth App at: https://github.com/settings/developers
# Required scopes: read:user, read:org
GITHUB_OAUTH_CLIENT_ID=Iv1.abc123...
GITHUB_OAUTH_CLIENT_SECRET=your_oauth_client_secret_here
GITHUB_OAUTH_CALLBACK_URL=http://localhost:3000/auth/github/callback

# Database (PostgreSQL)
# Example: postgresql://user:password@localhost:5432/maintenance_badges
DATABASE_URL=postgresql://user:password@localhost:5432/maintenance_badges

# Encryption (generate with: openssl rand -base64 32)
# IMPORTANT: Must be at least 32 characters
ENCRYPTION_SECRET=your_32_character_minimum_secret_key_here

# Session
# Generate with: openssl rand -base64 32
SESSION_SECRET=your_32_character_session_secret_here
SESSION_COOKIE_DOMAIN=localhost

# Redis Cache
# Local: redis://localhost:6379
# Upstash: Get from https://console.upstash.com/
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
CACHE_DEFAULT_TTL=300
CACHE_MAX_TTL=3600

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=60000

# Monitoring (Optional)
SENTRY_DSN=
SENTRY_ENVIRONMENT=development

# CORS
ALLOWED_ORIGINS=*
